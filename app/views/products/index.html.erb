<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://img.viajeabrasil.com/platos-tipicos-brasil.jpg" alt="imagen_tienda">
          <div class="caption">
            <h3><%= product.name %></h3>
            <p>$<%= product.price %>.-</p>
            <p><%= product.shop.name %></p>
            <p>ID USER<%= product.user_id %></p>
            <p>
            <%= link_to 'Show', product, role: 'button', class: 'btn btn-primary' %>
            <% if current_user.id == product.user_id %>
              <%= link_to 'Edit', edit_product_path(product), role: 'button', class: 'btn btn-primary' %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' %>
            <% end %>  
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

