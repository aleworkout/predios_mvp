<p id="notice"><%= notice %></p>

<h1>Listing Shops</h1>
  <div class="row">
    <% @shops.each do |shop| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://img.viajeabrasil.com/platos-tipicos-brasil.jpg" alt="imagen_tienda">
          <div class="caption">
            <h3><%= shop.name %></h3>
            <p>"<%= shop.greeting %>".</p>
            <p><%= shop.number %></p>
            <% if shop.whatsapp %>
              <ul>
                <li>Tengo Whatsapp</li>
              </ul>
            <% end %>
            <% if shop.phone %>
              <ul>
                <li>Puedes Llamarme</li>
              </ul>
            <% end %>
            <p>
            <%= link_to 'Show', shop, role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_shop_path(shop), role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

