<p id="notice"><%= notice %></p>

<h1><%= @shop.name %></h1>
<h3><%= @shop.number %></h3>
            <% if @shop.whatsapp %>
              <ul>
                <li>Tengo Whatsapp</li>
              </ul>
            <% end %>
            <% if @shop.phone %>
              <ul>
                <li>Puedes Llamarme</li>
              </ul>
            <% end %>

  <div class="row">
    <% @products.each do |product| %>
      <% if product.shop_id == @shop.id %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://img.viajeabrasil.com/platos-tipicos-brasil.jpg" alt="imagen_tienda">
          <div class="caption">
            <h3><%= product.name %></h3>
            <p>$<%= product.price %> (CLP)</p>
            <p>
            <%= link_to 'Show', product, role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_product_path(product), role: 'button', class: 'btn btn-primary' %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-primary' %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

<br>

<%= link_to 'Edit', edit_shop_path(@shop) %> |
<%= link_to 'Back', shops_path %>
